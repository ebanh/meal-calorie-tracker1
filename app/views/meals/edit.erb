<h4> Edit your meal </h4>
<a href="/<%= current_user.slug %>">Return</a>
<br></br>
<form action="/meals/<%= @meal.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="PATCH">

  <label for="name">Meal name: <%= @meal.name %></label>
  <input type="text" name="name" id="name">
  <br></br>

  <label for="calories">Calories: <%= @meal.calories %></label>
  <input type="integer" name="calories" id="calories">
  <br></br>

  <input type="submit" value="Edit Meal">
</form>

<b>OR</b>

<form action="/days/<%= @meal.id %>/delete" method="post">
  <input type="hidden" id="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete">
</form>
